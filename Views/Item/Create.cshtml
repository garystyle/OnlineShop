@model OnlineShop.ViewModels.ItemCreateViewModel

@{
    ViewBag.Title = "新增商品";
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")

}
<div class="page-header">
    <h1>新增商品</h1>
</div>
<div class="form-horizontal">
    @using (Html.BeginForm("Add", "Item", FormMethod.Post, new { enctype = "multipart/form*data" }))
    {
        <div class="alert alert-warning">
            @Html.ValidationSummary()
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.NewData.Name, new { @class = "col-xs-4 col-md-1 form-label" })
            <div class="col-xs-8 col-md-11">
                @Html.TextBoxFor(model => model.NewData.Name, new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.NewData.Name, "", new { @class = "label label-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.NewData.Price, new { @class = "col-xs-4 col-md-1 form-label" })
            <div class="col-xs-8 col-md-11">
                @Html.TextBoxFor(model => model.NewData.Price, new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.NewData.Price, "", new { @class = "label label-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.ItemImage, new { @class = "col-xs-4 col-md-1 form-label" })
            <div class="col-xs-8 col-md-11">
                @Html.TextBoxFor(model => model.ItemImage, new { @class = "form-control", type = "file" })
                @Html.ValidationMessageFor(model => model.ItemImage, "", new { @class = "label label-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-1 col-md-10">
                <input type="submit" value="新增商品" class="btn btn-primary" />
            </div>
        </div>
    }
</div>


